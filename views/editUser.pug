extends layout

block content
  h1.text-center= title
  h1.text-center
    span.fa.fa-group

  .container
  .row.centered-form
    .col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.text-center.panel-title
            | Welcome #{firstName}
            div(style='text-align:center')
              a.text-center.btn.btn-danger.btn-sm(href='/logout') Logout
        .panel-body
          form(role='form', action= 'save', method='POST')
            .row
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  label(for="first_name")
                    small First Name
                  input#first_name.form-control.input-sm(type='text', name='first_name', value=firstName, required='true')
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  label(for="last_name")
                    small Last Name
                  input#last_name.form-control.input-sm(type='text', name='last_name', value=lastName, required='true')
            .row
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  label(for="email")
                    small E-mail
                  input#email.form-control.input-sm(type='email', name='email', value=email, readonly='readonly')
              .col-xs-6.col-sm-6.col-md-6
                .form-group
                  label(for="user_role")
                    small User Role
                    input#user_role.form-control.input-sm(type='text', name='user_role', value=userRole, readonly='readonly')
            input.btn.btn-info.btn-block(type='submit', value='Modify', formaction='modify')