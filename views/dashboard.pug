extends layout
include productListMixin.pug

block content
    .container
    if IsSupplier
      .row.centered.new-prd-btn
        .col-xs-10
        .col-xs-2
          a(href="/ProductView").btn.btn-primary="Add New Product"
    .row.centered
      .col-xs-12
        +productList(futureProducts,"Future Products")

    .row.centered
      .col-xs-12
        +productList(currentProducts,"Current Products")
    .row.centered
      .col-xs-12
        +productList(pastProducts,"Past Products")

    script.
      $('.expand-btn').on('click', function(){
          $(this).toggleClass('fa-plus-square-o');
          $(this).toggleClass('fa-minus-square-o');
          $(this).next("ul").toggle();
      });